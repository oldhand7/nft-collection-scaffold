{
  "name": "nft-collection-scaffold",
  "version": "1.0.0",
  "description": "Production-ready boilerplate code for a rarity-based NFT collection on Ethereum, Polygon, Optimism, Arbitrum and Binance Smart Chain",
  "main": "index.js",
  "repository": "git@github.com:0xflair/nft-collection-scaffold.git",
  "author": "Flair.Finance",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "eslint \"**/*.{js,ts}\" && solhint src/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "test": "npx hardhat test --network hardhat",
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "coverage": "npm run build && npx hardhat coverage --temp artifacts --network hardhat"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^4.3.2",
    "@pinata/sdk": "^1.1.23",
    "@rarible/royalties": "^0.7.2",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.1",
    "canvas": "^2.8.0",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.4.6",
    "hardhat": "^2.6.4",
    "hardhat-contract-sizer": "^2.1.0",
    "hardhat-deploy": "^0.9.1",
    "hardhat-gas-reporter": "^1.0.4",
    "lodash": "^4.17.21",
    "merge-images": "^2.0.0",
    "merge-img": "^2.1.3",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16"
  }
}
